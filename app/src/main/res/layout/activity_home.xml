<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Top Bar with Search and Notification -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="end">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/search"
            android:contentDescription="Search"
            android:layout_marginEnd="16dp"/>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/notification"
            android:contentDescription="Notification"/>
    </LinearLayout>

    <!-- Scrollable Home Page Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_above="@id/bottom_navigation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Welcome Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome Back"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bishnu"
                android:textSize="18sp"
                android:layout_marginBottom="16dp"/>

            <!-- New Collection Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="@drawable/man"
                android:gravity="center"
                android:padding="16dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Collection"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Discount 50% for first transaction"
                    android:textSize="16sp"
                    android:textColor="@android:color/white"
                    android:layout_marginBottom="12dp"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Shop Now"
                    android:backgroundTint="@color/purple"
                    android:textColor="@android:color/white"/>
            </LinearLayout>

            <!-- Recommendation Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Recommendation"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"/>

            <!-- First Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <!-- Shirt -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@color/light_gray"
                    android:padding="8dp"
                    android:gravity="center"
                    android:layout_marginEnd="8dp"> <!-- Added margin for gap -->

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="8dp"
                            android:contentDescription="Shirt Icon"
                            android:src="@drawable/shirt" />

                        <!-- Favorite Icon -->
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/favourite"
                            android:contentDescription="Favorite"
                            android:layout_alignParentEnd="true"
                            android:layout_margin="8dp"/>
                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Shirt - $20"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_gravity="center_horizontal"/>

                    <!-- Rating -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="⭐ 4.5"
                        android:textSize="12sp"
                        android:layout_gravity="center_horizontal"/>
                </LinearLayout>

                <!-- Jeans -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@color/light_gray"
                    android:padding="8dp"
                    android:gravity="center"
                    android:layout_marginStart="8dp"> <!-- Added margin for gap -->

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/jeans"
                            android:contentDescription="Jeans Icon"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="8dp"/>

                        <!-- Favorite Icon -->
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/favourite"
                            android:contentDescription="Favorite"
                            android:layout_alignParentEnd="true"
                            android:layout_margin="8dp"/>
                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jeans - $35"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_gravity="center_horizontal"/>

                    <!-- Rating -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="⭐ 4.7"
                        android:textSize="12sp"
                        android:layout_gravity="center_horizontal"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Second Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <!-- Shoes -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@color/light_gray"
                    android:padding="8dp"
                    android:gravity="center"
                    android:layout_marginEnd="8dp"> <!-- Added margin for gap -->

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="8dp"
                            android:contentDescription="Shoes Icon"
                            android:src="@drawable/shoes" />

                        <!-- Favorite Icon -->
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/favourite"
                            android:contentDescription="Favorite"
                            android:layout_alignParentEnd="true"
                            android:layout_margin="8dp"/>
                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Shoes - $50"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_gravity="center_horizontal"/>

                    <!-- Rating -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="⭐ 4.8"
                        android:textSize="12sp"
                        android:layout_gravity="center_horizontal"/>
                </LinearLayout>

                <!-- Coat -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@color/light_gray"
                    android:padding="8dp"
                    android:gravity="center"
                    android:layout_marginStart="8dp"> <!-- Added margin for gap -->

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:src="@drawable/coat"
                            android:contentDescription="Coat Icon"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="8dp"/>

                        <!-- Favorite Icon -->
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/favourite"
                            android:contentDescription="Favorite"
                            android:layout_alignParentEnd="true"
                            android:layout_margin="8dp"/>
                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Coat - $70"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_gravity="center_horizontal"/>

                    <!-- Rating -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="⭐ 4.6"
                        android:textSize="12sp"
                        android:layout_gravity="center_horizontal"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation Bar -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="?android:attr/windowBackground"
        app:menu="@menu/bottom_nav_menu" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>